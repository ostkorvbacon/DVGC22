<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/camera_activity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scanner_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:autoFocusButtonColor="@android:color/white"
        app:autoFocusButtonVisible="true"
        app:flashButtonColor="@android:color/white"
        app:flashButtonVisible="true"
        app:frameAspectRatioHeight="1"
        app:frameAspectRatioWidth="1"
        app:frameColor="@android:color/white"
        app:frameCornersRadius="0dp"
        app:frameCornersSize="50dp"
        app:frameSize="0.75"
        app:frameThickness="2dp"
        app:maskColor="#77000000"
        android:layout_marginBottom="10dp"/>


    <TextView
        android:id="@+id/QR_scanner_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanner_view"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:text="@string/QR_code_scanner_name"
        android:textColor="#4F4F4F"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/QR_scanner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/QR_scanner_name_label"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="15dp"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/QR_scanner_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/QR_scanner_name"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:text="@string/QR_code_scanner_date"
        android:textColor="#4F4F4F"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/QR_scanner_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/QR_scanner_date_label"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="15dp"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/QR_scanner_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/QR_scanner_date"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:text="@string/QR_code_scanner_type"
        android:textColor="#4F4F4F"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/QR_scanner_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/QR_scanner_type_label"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="15dp"
        android:textSize="20sp"/>




</RelativeLayout>